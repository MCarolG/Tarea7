<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrograTarea7.MainPage">

    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center">
        <Label Text="Calcular tu Indice de Masa Corporal"/>
        <Entry Placeholder="Altura" x:Name="Altura"/>
        <Entry Placeholder="Peso" x:Name="Peso"/>
        <Entry Placeholder="Tu IMC" x:Name="IMC"/>
        <Button Text="Calcular" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
